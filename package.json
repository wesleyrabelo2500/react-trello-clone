{
    "name": "react-trello-clone",
    "version": "0.0.1",
    "private": true,
    "dependencies": {
        "antd": "^3.11.0",
        "react": "^16.6.0",
        "react-dnd": "^5.0.0",
        "react-dnd-html5-backend": "^5.0.1",
        "react-dom": "^16.6.0",
        "react-router-dom": "^4.3.1",
        "react-scripts": "2.0.5",
        "styled-components": "^4.1.1"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "eslint": "eslint \"src/**/*.+(js|jsx|ts|tsx)\"",
        "eslint-fix": "eslint --fix \"src/**/*.+(js|jsx|ts|tsx)\"",
        "prettier": "prettier \"**/*.+(js|jsx|ts|tsx|json|scss|css|md|html)\"",
        "prettier-diff": "npm run prettier \"**/*.+(js|jsx|ts|tsx|json|scss|css|md|html)\" -- --list-different",
        "prettier-fix": "npm run prettier \"**/*.+(js|jsx|ts|tsx|json|scss|css|md|html)\" -- --write",
        "firebase-deploy": "npm run build && firebase deploy"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "devDependencies": {
        "eslint": "^5.6.0",
        "firebase": "^5.11.1",
        "husky": "^7.0.2",
        "lint-staged": "^11.1.2",
        "prettier": "2.3.2",
        "webpack-bundle-analyzer": "^4.4.2"
    },
    "lint-staged": {
        "*.{html,json,md,js,jsx,ts,tsx}": "prettier --write"
    }
}
